class Solution 
{
    public int maxProfit(int[] prices) 
    {
        int n=prices.length;
        if(n==1)
            return 0;
        int min1=prices[0];
        int profit=prices[1]-prices[0];
        for(int i=1;i<n;i++)
        {
            profit=Math.max(profit,prices[i]-min1);
            min1=Math.min(min1,prices[i]);
        }
        if(profit<=0)
            return 0;
        return profit;
    }
}
