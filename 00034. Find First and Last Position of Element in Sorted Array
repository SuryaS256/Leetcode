class Solution 
{
    public int[] searchRange(int[] a, int target) 
    {
        int[] res=new int[]{-1,-1};
        int n=a.length;
        if(n==0)
            return res;

        res[0]=first(a,n,target);
        res[1]=last(a,n,target);
        return res;
    }
    public int first(int a[],int n,int x)
    {
        int low=0;
        int high=n-1;
        while(low<=high)
        {
            int mid=(low+high)/2;
            if(a[mid]>x)
                high=mid-1;
            else if(a[mid]<x)
                low=mid+1;
            else
            {
                if(mid==0||a[mid-1]!=a[mid])
                    return mid;
                else
                    high=mid-1;
            }
        }
        return -1;
    }
    public int last(int a[],int n,int x)
    {
        int low=0;
        int high=n-1;
        while(low<=high)
        {
            int mid=(low+high)/2;
            if(a[mid]>x)
                high=mid-1;
            else if(a[mid]<x)
                low=mid+1;
            else
            {
                if((mid==n-1)||a[mid+1]!=a[mid])
                    return mid;
                else
                    low=mid+1;
            }
        }
        return -1;
    }   
}
