class Solution 
{
    public void nextPermutation(int[] nums) 
    {
        int n=nums.length;
        int index=-1;
        for(int i=n-2;i>=0;i--)
        {
            if(nums[i]<nums[i+1])
            {
                index=i;
                break;
            }
        }
        if(index==-1)
        {
            reverse(nums,0,n-1);
            return;
        }
        for(int i=n-1;i>index;i--)
        {
            if(nums[i]>nums[index])
            {
                swap(nums,i,index);
                break;
            }
        }
        reverse(nums,index+1,n-1);
    }
    public void swap(int[] a,int i,int j)
    {
        int temp=a[i];
        a[i]=a[j];
        a[j]=temp;
    }
    public void reverse(int[] arr,int i,int j)
    {
        int low=i;
        int high=j;
        while(low<=high)
        {
            swap(arr,low,high);
            low++;
            high--;
        }
    }
}
