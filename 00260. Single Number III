class Solution 
{
    public int[] singleNumber(int[] nums) 
    {
        int[] res=new int[2];
        int n=nums.length;
        int index=0;
        int v=0;
        for(int i=0;i<n;i++)
        {
            v=v^nums[i];
        }
        for(int i=0;i<32;i++)
        {
            if(checkBit(v,i))
            {
                index=i;
                break;
            }
        }
        for(int i=0;i<n;i++)
        {
            if(checkBit(nums[i],index)==true)
                res[0]=nums[i]^res[0];
            else
                res[1]=nums[i]^res[1];
        }
        return res;
    }
    public boolean checkBit(int num,int k)
    {
        int res=num>>(k-1);
        if((res&1)!=0)
            return true;
        else
            return false;            
    }
}
